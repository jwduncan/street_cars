<h1>Listing vehicles</h1>
<%= form_tag({:controller => "vehicles", :action => "index"}, :method => 'get') do %> 
  <p>
  	<%= text_field_tag :search, params[:search] %>
  	<%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sortable "vehicle" %></th>
      <th><%= sortable "date" %></th>
      <th><%= sortable "desc" %></th>
      <th><%= sortable "mileage" %></th>
      <th><%= sortable "category" %></th>
      <th><%= sortable  "cost" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vehicle %></td>
        <td><%= vehicle.date %></td>
        <td><%= vehicle.desc %></td>
        <td><%= vehicle.mileage %></td>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.cost %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %><br/>
<%= link_to 'All Vehicles', vehicles_path %>

<h2>Import Vehicle Records</h2>

<%= form_tag import_vehicles_path, multipart: true do %>
   <%= file_field_tag :file %>
   <%= submit_tag "Import" %>
<% end %>
